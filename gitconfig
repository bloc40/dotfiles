[user]
  name  = Jamal El Milahi
  email = jmilahi@yuzu.com

[color]
  ui     = auto

[color "status"]
  added     = green
  changed   = red bold
  untracked = magenta bold

[commit]
  template = /etc/git-commit-template

[core]
  pager            = less
  editor           = nvim
  filemode         = true
  logallrefupdates = true
  whitespace       = trailing-space,space-before-tab,indent-with-non-tab
  excludesfile     = /opt/boxen/config/git/gitignore

[alias]
  br   = !git branch --color -v | cut -c1-100
  brs  = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci   = commit
  cia  = commit --amend
  cln  = clean -df
  cm   = "!f() { git commit -m \"$*\"; }; f"
  co   = checkout
  cp   = cherry-pick
  df   = diff
  dfs  = diff --staged
  dfsw = diff --staged --color-words
  dfw  = diff --color-words
  ll   = "!f() { \
              if [[ $# > 0  ]]; then \
                git log --oneline --decorate --graph -$@; \
              else \
                git log --oneline --decorate --graph --all; \
              fi \
            }; f"
  lll  = "!f() { \
              args='%Cgreen%h %Cred%d%Creset %s%Creset %C(cyan bold)(%cr)%Creset %Cblue<%an>%Creset'; \
              if [[ $# > 0  ]]; then \
                git log -$@ --graph --all --pretty=format:\"$args\"; \
              else \
                git log --graph --all --pretty=format:\"$args\"; \
              fi \
            }; f"
  lp   = log -p
  poh  = push origin HEAD
  pr   = pull --rebase
  ra   = rebase --abort
  rc   = rebase --continue
  rs   = rebase --skip
  st   = status
  sts  = status -s
  web  = instaweb --httpd=webrick
  webs = instaweb --stop

[push]
  default = simple

[grep]
  fullname = true

[help]
  autocorrect = 1

[github]
  user = bloc40

[hub]
  protocol = https

[init]
  templatedir = ~/.git_template

[credential]
  helper = /opt/boxen/bin/boxen-git-credential
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
