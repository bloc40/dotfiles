[user]
  name  = Jamal El Milahi
  email = jamal@elmilahi.com

[color]
  ui     = auto

[color "status"]
  added     = green
  changed   = red bold
  untracked = magenta bold

[commit]
  template = /etc/git-commit-template

[core]
  pager            = less
  editor           = vim
  filemode         = true
  logallrefupdates = true
  whitespace       = trailing-space,space-before-tab,indent-with-non-tab
  excludesfile     = ~/.gitignore_global

[alias]
  br   = !git branch --color -v | cut -c1-100
  ci   = commit
  cia  = commit --amend
  cl   = clean -df
  co   = checkout
  cp   = cherry-pick
  df   = diff
  dfw  = diff --color-words
  dfs  = diff --staged
  dfsw = diff --staged --color-words
  ll   = log --oneline --decorate --graph --all
  lll  = log --graph --all --pretty=format:'%Cgreen%h %Cred%d%Creset %s%Creset %C(black bold)(%cr)%Creset %Cblue<%an>%Creset'
  lp   = log -p
  st   = status
  sts  = status -s
  web  = instaweb --httpd=webrick
  webs = instaweb --stop
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes


[push]
  default = simple

[grep]
  fullname = true
