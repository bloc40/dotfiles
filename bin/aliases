# unix
alias v='nvim'
alias mkdir='mkdir -pv'
alias c='clear'
alias h='history'
alias la='ls -Shal'
alias ll='ls -lh'
alias so='source ~/.bash_profile'
alias tarc='tar -czvf'
alias tarx='tar -xzvf'
alias now='date +"%T"'
alias dot='cd ~/Code/dotfiles && v vimrc'
alias g='git'
alias noh='set +o history'
alias yesh='set -o history'
alias jsonpp='python -m json.tool'

# rails
alias rake='time bundle exec rake'
alias migrate='rake db:migrate db:rollback db:migrate'
alias rdm='rake db:migrate'
alias rdtp='rake db:test:prepare'
alias rdr='rake db:rollback'
alias rpp='rake parallel:prepare'
alias rpa='rake parallel:all'
alias rdm0='rake db:migrate VERSION=0'
alias rdms='rake db:migrate db:seed'
alias rds='rake db:seed'
alias rc='rails c'
alias rdb='rails db'
alias rs='rails s'
alias fs='foreman start'
alias rr='be rake routes'

# bundler
alias bo='EDITOR=vim bundle open'
alias bu='bundle update'
alias be='bundle exec'

# spin
alias ss='spin serve -t'

# ctags
alias tags='ctags -R --exclude=.git --exclude=log --exclude=tmp * `bundle show --paths`/../*'
