# nvim
export VISUAL=nvim  # use Neovim as "preferred editor"
alias v='nvim'

# unix
alias mkdir='mkdir -pv'
alias c='clear'
alias h='history'
alias la='ls -lah'
alias las='ls -la | grep "\->"'
alias ll='ls -lh'
alias so='source ~/.bashrc'
alias tarc='tar -czvf'
alias tarx='tar -xzvf'
alias now='date +"%T"'
alias dot='cd ~/Code/dotfiles && v vimrc'
alias g='git'
alias noh='set +o history'
alias yesh='set -o history'
alias jsonpp='python -m json.tool'
alias ns='npm start'
# alias less='less -MN'
alias df='df -h'
alias du='du -h'
alias sc='screencapture -i'
alias mute="osascript -e 'set volume output muted true'"
alias unmute="osascript -e 'set volume output muted false'"

# rails
# alias rake='time foreman run rake'
alias migrate='rails db:migrate db:rollback && rails db:migrate'
alias rdm='bin/rails db:migrate'
alias rdtp='bin/rails db:test:prepare'
alias rdr='bin/rails db:rollback'
alias rdm0='bin/rails db:migrate VERSION=0'
alias rdms='bin/rails db:migrate db:seed'
alias rds='bin/rails db:seed'
alias rpp='rake parallel:prepare'
alias rpa='rake parallel:all'
# alias rc='foreman run bin/rails c'
# alias rs='foreman run bin/rails s'
alias rdb='bin/rails db'
alias fs='foreman start'
alias fr='foreman run'
alias rr='be rails routes'
alias tags='ctags -R --languagues=-javascript,sql,python,sml --exclude=.git,log,tmp * `bundle show --paths`/../*'
alias edit='EDITOR="vim" rails credentials:edit'

# bundler
alias bo='EDITOR=vim bundle open'
alias bi='bundle inof'
alias bu='bundle update'
alias be='bundle exec'

# spin
alias ss='spin serve -t'

# tmux
alias tmux='tmux -f ~/.tmux/tmux.conf'

# python
alias p3='python3'
